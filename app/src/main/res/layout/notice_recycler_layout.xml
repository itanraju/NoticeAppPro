<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/parentLayout"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/q"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="TITLE : About Term Fee"
            android:fontFamily="@font/worksans_medium"
            android:id="@+id/mNoticeTitle"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/delete_img"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:id="@+id/imgDelete"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Posted By : Mr. H M Shukla"
            android:layout_below="@+id/mNoticeTitle"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/worksans_regular"
            android:id="@+id/byName"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/byName"
            android:layout_marginTop="3dp"
            android:src="@drawable/edittext_log_in"
            android:id="@+id/mNoticeImg"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/q"
        android:id="@+id/ww"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/like"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/likeImg"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIKE"
            android:fontFamily="@font/worksans_medium"
            android:layout_toRightOf="@+id/likeImg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:id="@+id/likeText"
            />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/comment"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/likeText"
            android:layout_marginLeft="25dp"
            android:id="@+id/commentImg1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:id="@+id/commentText"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/commentImg1"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/worksans_medium"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/download"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/download"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ww"
        android:id="@+id/www"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/comment"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:id="@+id/commentImg"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/commentImg"
            android:hint="Add A Comment"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/commentshape"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:id="@+id/noticeComment"
            android:layout_toLeftOf="@id/btnAddComment"
            android:fontFamily="@font/worksans_medium"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/addcomment"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/btnAddComment"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/www"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/date"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/dateImg"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:33:44"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/dateImg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/worksans_medium"
            android:id="@+id/mDate"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/time"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mDate"
            android:layout_marginLeft="14dp"
            android:id="@+id/timeImg"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/timeImg"
            android:textSize="18dp"
            android:text="22:33:33"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/worksans_medium"
            android:id="@+id/mTime"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ADADAD"
        />


</RelativeLayout>





