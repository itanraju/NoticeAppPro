<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add_background"
    android:gravity="center"
    tools:context=".AddMaterial">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/z"
        android:textSize="22dp"
        android:textColor="#fff"
        android:text="ADD STUDY MATERIAL"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/worksans_medium"
        />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/z"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/layout_log_in"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/study_material"
            android:layout_marginTop="20dp"
            android:id="@+id/materialImg"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Name"
            android:textSize="16dp"
            android:layout_below="@+id/materialImg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/worksans_regular"
            android:id="@+id/materialName"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/materialName"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittext_log_in"
            android:text="Select Study Material"
            android:textSize="18dp"
            android:fontFamily="@font/worksans_regular"
            android:id="@+id/btnSelect"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:layout_below="@+id/btnSelect"
            android:background="@drawable/edittext_log_in"
            android:fontFamily="@font/worksans_regular"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:hint="Add Title"
            android:textAlignment="center"
            android:id="@+id/materialTitle"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/materialTitle"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_log_in"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="ADD STUDY MATERIAL"
            android:textColor="#fff"
            android:fontFamily="@font/worksans_regular"
            android:layout_marginBottom="20dp"
            android:id="@+id/btnUpload"
            />






    </RelativeLayout>





</RelativeLayout>

